@model ProjetoFinal.Models.Plano

@{
    ViewData["Title"] = "Cadastro de Plano";
}

<link href="~/css/cadastroplano.css" rel="stylesheet" />

<div class="container-form">
    <h2 class="text-center mb-4">Cadastro de Plano</h2>

    <form asp-action="Salvar" method="post">

        <label>Nome do Plano</label>
        <input class="form-control mb-2" asp-for="Nome" required />

        <label>Valor (R$)</label>
        <input class="form-control mb-2" type="number" step="0.01" asp-for="Valor" value="" required />

        <label>Duração</label>
        <input class="form-control mb-2" type="date" asp-for="Duracao" value="" required />

        <label>Requisitos</label>
        <textarea class="form-control mb-3" asp-for="Requisitos" rows="4" required></textarea>

        <button class="btn btn-primary w-100">Cadastrar</button>

    </form>

    <a class="btn btn-secondary w-100 mt-3"
       asp-controller="Cadastrar"
       asp-action="Cadastrar">
        Voltar
    </a>
</div>
