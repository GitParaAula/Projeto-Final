@model List<ProjetoFinal.Models.Usuario>

@{
    ViewData["Title"] = "Consultar Clientes";
}

<link href="@Url.Content("~/css/consultacliente.css")" rel="stylesheet" />

<video autoplay loop muted playsinline class="bg-video">
    <source src="@Url.Content("~/videos/wavesplayback.mp4")" type="video/mp4" />
</video>

<div class="consulta-container">

    <!-- TÍTULO -->
    <h2 class="consulta-titulo">Clientes Registrados</h2>

    <!-- CAMPO DE BUSCA -->
    <form method="get" asp-action="ConsultaCliente" class="consulta-form">
        <input type="text" name="nome" placeholder="Digite o nome do cliente" />
        <button type="submit">Buscar</button>
    </form>

    <!-- TABELA DE CLIENTES -->
    <div class="table-container">
        <table class="table table-custom table-striped">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Idade</th>
                    <th>Email</th>
                    <th>Endereço</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.Nome</td>
                        <td>@c.Cpf</td>
                        <td>@c.Idade</td>
                        <td>@c.Email</td>
                        <td>
                            Rua: @c.Endereco?.Rua <br />
                            Nº: @c.Endereco?.Numero <br />
                            Comp: @c.Endereco?.Complemento
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- BOTÃO VOLTAR -->
    <a asp-controller="Consultar" asp-action="Consultar" class="btn-voltar">Voltar</a>

</div>
