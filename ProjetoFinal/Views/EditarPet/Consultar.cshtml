@model List<ProjetoFinal.Models.Pet>

@{
    ViewData["Title"] = "Consultar Pets";
}

<link href="~/css/ConsultarPets_Atualizar.css" rel="stylesheet" />

<video autoplay loop muted playsinline class="bg-video">
    <source src="@Url.Content("~/videos/wavesplayback.mp4")" type="video/mp4" />
</video>

<div class="cadastrar-container">

    <div class="cadastrar-card">
        <h2 class="titulo text-center mb-4">Consultar Pets</h2>

        <!-- FILTRO POR NOME -->
        <form method="get" asp-controller="EditarPet" asp-action="Consultar" class="mb-4 search-box">
            <div class="input-group">
                <input type="text" name="nome" class="form-control" placeholder="Buscar por nome..." />
                <button type="submit" class="btn btn-primary">Buscar</button>
            </div>
        </form>

        <!-- TABELA -->
        <div class="table-responsive">
            <table class="table table-bordered table-primary-custom">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Tipo</th>
                        <th>Raça</th>
                        <th>Porte</th>
                        <th>Idade</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td>@p.Nome</td>
                            <td>@p.Tipo</td>
                            <td>@p.Raca</td>
                            <td>@p.Porte</td>
                            <td>@p.Idade</td>
                            <td>
                                <a asp-controller="EditarPet"
                                   asp-action="Editar"
                                   asp-route-id="@p.Codigo_Pet"
                                   class="btn btn-warning btn-sm">
                                    Editar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <a class="btn btn-voltar mt-3"
           asp-controller="Atualizar"
           asp-action="Atualizar">
            Voltar
        </a>
    </div>

</div>
