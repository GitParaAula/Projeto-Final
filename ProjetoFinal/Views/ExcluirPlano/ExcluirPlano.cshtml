@model List<ProjetoFinal.Models.Plano>

@{
    ViewData["Title"] = "Excluir Plano";
}

<link href="~/css/excluirplano.css" rel="stylesheet" />

<video autoplay loop muted playsinline class="bg-video">
    <source src="@Url.Content("~/videos/wavesplayback.mp4")" type="video/mp4" />
</video>

<div class="cadastrar-container">

    <div class="cadastrar-card">

        <h2 class="titulo text-center mb-4">Excluir Plano</h2>

        <!-- CAMPO DE BUSCA -->
        <form method="get" asp-controller="ExcluirPlano" asp-action="ExcluirPlano" class="mb-4">
            <div class="input-group">
                <input type="text" name="nome" class="form-control" placeholder="Digite o nome do plano" />
                <button type="submit" class="btn btn-primary">Buscar</button>
            </div>
        </form>

        <!-- TABELA -->
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-danger text-center">
                    <tr>
                        <th>Nome</th>
                        <th>Valor (R$)</th>
                        <th>Duração</th>
                        <th>Requisitos</th>
                        <th>Excluir</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td>@p.Nome</td>
                            <td>@p.Valor</td>
                            <td>@p.Duracao.ToString("dd/MM/yyyy")</td>
                            <td>@p.Requisitos</td>
                            <td class="text-center">
                                <button class="btn btn-danger btn-sm"
                                        onclick="confirmarExclusaoPlano(@p.Codigo_Plano)">
                                    Excluir
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <a class="btn btn-voltar w-100 mt-3" asp-controller="Excluir" asp-action="Excluir">
            Voltar
        </a>

    </div>

</div>

<script>
    function confirmarExclusaoPlano(id) {
        if (confirm("Tem certeza que deseja EXCLUIR este plano? Esta ação não poderá ser desfeita.")) {
            window.location.href = "/ExcluirPlano/Excluir?id=" + id;
        }
    }
</script>
