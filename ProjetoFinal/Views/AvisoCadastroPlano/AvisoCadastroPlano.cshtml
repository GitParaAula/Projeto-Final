@{
    ViewData["Title"] = "Cadastro Concluído";
}

<!-- Link do CSS individual -->
<link href="@Url.Content("~/css/avisoCadastroPlano.css")" rel="stylesheet" />

<video autoplay loop muted playsinline class="bg-video">
    <source src="@Url.Content("~/videos/wavesplayback.mp4")" type="video/mp4" />
</video>

<div class="container-aviso">

    <div class="card-aviso">

        <h3 class="aviso-title">Cadastro Realizado!</h3>

        <p class="aviso-text">
            O Plano foi cadastrado com sucesso.
        </p>

        <input type="text"
               class="input-codigo-plano"
               value="@ViewBag.CodigoPlano"
               readonly />

        <a class="btn-aviso mt-4"
           asp-controller="Menu"
           asp-action="Menu">
            Voltar ao Menu
        </a>

    </div>

</div>
