@{
    ViewData["Title"] = "Atribuir Plano ao Pet";
}

<link href="~/css/atribuirplano.css" rel="stylesheet" />

<div class="cadastrar-container">
    <div class="cadastrar-card">

        <h2 class="titulo">Atribuir Plano ao Pet</h2>

        @if (TempData["Mensagem"] != null)
        {
            <div class="alert @TempData["MensagemClasse"] text-center">
                @TempData["Mensagem"]
            </div>
        }

        <form method="post">

            <div class="mb-3">
                <label class="form-label">Código do Pet</label>
                <input type="number" class="form-control" name="codigoPet" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Código do Plano</label>
                <input type="number" class="form-control" name="codigoPlano" required />
            </div>

            <button type="submit" class="btn btn-primary w-100 mb-2">Atribuir</button>

        </form>

        <a asp-controller="Gerenciar" asp-action="Gerenciar" class="btn-voltar">
            Voltar
        </a>

    </div>
</div>
