@model ProjetoFinal.Models.HistoricoCadastro

@{
    ViewData["Title"] = "Confirmar Funcionário";
}

<link href="@Url.Content("~/css/HistoricoCadastro.css")" rel="stylesheet" />

<div class="container-confirm">

    <h2>Confirmar Funcionário do Cadastro</h2>

    <form asp-controller="HistoricoCadastro" asp-action="Registrar" method="post">

        <div class="form-group">
            <label for="Codigo_Funcionario">Código do Funcionário:</label>
            <input type="number" id="Codigo_Funcionario" name="Codigo_Funcionario" class="form-control" required />
        </div>

        <button type="submit" class="btn-confirm">Confirmar</button>

    </form>

</div>
