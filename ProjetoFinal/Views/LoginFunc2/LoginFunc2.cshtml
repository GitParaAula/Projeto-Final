@{
    ViewData["Title"] = "Login do Funcionário";
}

<link href="~/css/loginfunc2.css" rel="stylesheet" />

<div class="cadastrar-container">

    <div class="cadastrar-card">

        <h2 class="titulo text-center mb-4">Login do Funcionário</h2>

        @if (TempData["Erro"] != null)
        {
            <div class="alert-erro">
                @TempData["Erro"]
            </div>
        }

        <form method="post" asp-action="Login" asp-controller="LoginFunc2" class="d-flex flex-column gap-3">

            <div class="form-group">
                <label for="Nome">Nome do Funcionário</label>
                <input type="text" class="form-control" id="Nome" name="Nome" placeholder="Digite seu nome" required />
            </div>

            <div class="form-group">
                <label for="Senha">Senha</label>
                <input type="password" class="form-control" id="Cpf" name="Cpf" placeholder="Digite sua senha" required />
            </div>

            <div class="text-center">
                <a asp-controller="CadastroFunc2"
                   asp-action="CadastroFunc2"
                   class="small text-decoration-none mb-2 d-block">
                    Não possui cadastro? Clique aqui.
                </a>
            </div>

            <button type="submit" class="btn btn-opcao">Entrar</button>

            <a class="btn btn-voltar" asp-controller="InterCadastroCliente" asp-action="InterCadastroCliente">
                Voltar
            </a>

        </form>

    </div>

</div>
