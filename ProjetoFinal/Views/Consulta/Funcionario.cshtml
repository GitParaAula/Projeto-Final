@model List<ProjetoFinal.Models.Funcionario>

@{
    ViewData["Title"] = "Consulta";
}

<link href="~/css/funcionario.css" rel="stylesheet" />

<div class="container-consulta">
    <h2 class="text-center mb-4">Funcionários Registrados</h2>

    <form method="get" asp-action="Funcionario" class="mb-4 search-box">
        <div class="input-group">
            <input type="text" name="nome" class="form-control" placeholder="Digite o nome para consultar" />
            <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-striped table-bordered shadow-sm">
            <thead class="table-primary-custom">
                <tr>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>RG</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var f in Model)
                {
                    <tr>
                        <td>@f.Nome</td>
                        <td>@f.Cpf</td>
                        <td>@f.Rg</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <a class="btn btn-secondary w-100 mt-3"
       asp-controller="Consultar"
       asp-action="Consultar">
        Voltar
    </a>
</div>
