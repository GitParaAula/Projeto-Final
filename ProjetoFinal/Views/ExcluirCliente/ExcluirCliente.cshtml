@model List<ProjetoFinal.Models.Usuario>

@{
    ViewData["Title"] = "Excluir Clientes";
}

<link href="~/css/excluircliente.css" rel="stylesheet" />

<video autoplay loop muted playsinline class="bg-video">
    <source src="@Url.Content("~/videos/wavesplayback.mp4")" type="video/mp4" />
</video>

<div class="cadastrar-container">

    <div class="cadastrar-card">

        <h2 class="titulo text-center mb-4">Excluir Clientes</h2>

        <!-- CAMPO DE BUSCA -->
        <form method="get" asp-controller="ExcluirCliente" asp-action="ExcluirCliente" class="mb-4">
            <div class="input-group">
                <input type="text" name="nome" class="form-control" placeholder="Digite o nome do cliente" />
                <button type="submit" class="btn btn-primary">Buscar</button>
            </div>
        </form>

        <!-- TABELA -->
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-danger">
                    <tr>
                        <th>Nome</th>
                        <th>CPF</th>
                        <th>Idade</th>
                        <th>Email</th>
                        <th>Endereço</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td>@c.Nome</td>
                            <td>@c.Cpf</td>
                            <td>@c.Idade</td>
                            <td>@c.Email</td>
                            <td>
                                Rua: @c.Endereco?.Rua <br />
                                Nº: @c.Endereco?.Numero <br />
                                Comp: @c.Endereco?.Complemento
                            </td>
                            <td>
                                <button class="btn btn-danger btn-sm"
                                        onclick="return confirmarExclusao('@c.Codigo_Usuario')">
                                    Excluir
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <a class="btn btn-voltar w-100 mt-3" asp-controller="Excluir" asp-action="Excluir">
            Voltar
        </a>

    </div>

</div>

<script>
    function confirmarExclusao(id) {
        if (confirm("Tem certeza que deseja EXCLUIR este cliente? Esta ação não poderá ser desfeita.")) {
            window.location.href = '/ExcluirCliente/Excluir?id=' + id;
        }
        return false;
    }
</script>
