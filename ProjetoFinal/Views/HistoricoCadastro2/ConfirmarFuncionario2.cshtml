@model ProjetoFinal.Models.HistoricoCadastro

@{
    ViewData["Title"] = "Confirmar Funcionário 2";
}

<!-- Link do CSS individual da página -->
<link href="@Url.Content("~/css/HistoricoFuncionario2.css")" rel="stylesheet" />

<div class="container-confirm2">

    <h2>Confirmar Funcionário do Cadastro</h2>

    @if (TempData["Erro"] != null)
    {
        <div class="alert-erro">
            @TempData["Erro"]
        </div>
    }

    <form asp-controller="HistoricoCadastro2" asp-action="Registrar" method="post">

        <div class="form-group">
            <label for="Codigo_Funcionario">Código do Funcionário:</label>
            <input type="number" id="Codigo_Funcionario" name="Codigo_Funcionario" class="form-control" required />
        </div>

        <button type="submit" class="btn-confirm2">Confirmar</button>

    </form>

</div>
