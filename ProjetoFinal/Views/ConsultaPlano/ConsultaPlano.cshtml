@model List<ProjetoFinal.Models.Plano>

@{
    ViewData["Title"] = "Consulta de Planos";
}

<link href="~/css/consultaplanos.css" rel="stylesheet" />

<video autoplay loop muted playsinline class="bg-video">
    <source src="@Url.Content("~/videos/wavesplayback.mp4")" type="video/mp4" />
</video>

<div class="container-consulta">

    <h2 class="text-center mb-4">Consulta de Planos</h2>

    <!-- CAMPO DE BUSCA -->
    <form method="get" asp-controller="ConsultaPlano" asp-action="ConsultaPlano" class="search-box mb-4 d-flex gap-2">
        <input type="text" name="nome" class="form-control" placeholder="Digite o nome do plano" />
        <button type="submit" class="btn btn-primary">Buscar</button>
    </form>

    <!-- TABELA -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-primary-custom">
                <tr>
                    <th>Nome</th>
                    <th>Valor (R$)</th>
                    <th>Duração</th>
                    <th>Requisitos</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.Nome</td>
                        <td>@p.Valor</td>
                        <td>@p.Duracao.ToString("dd/MM/yyyy")</td>
                        <td>@p.Requisitos</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <a class="btn btn-secondary w-100 mt-3"
       asp-controller="Consultar"
       asp-action="Consultar">
        Voltar
    </a>

</div>
