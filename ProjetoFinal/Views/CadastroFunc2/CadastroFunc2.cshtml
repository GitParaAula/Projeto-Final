@{
    ViewData["Title"] = "Cadastro de Funcionário";
}

<link href="~/css/cadastrofunc2.css" rel="stylesheet" />

<div class="cadastrar-container">

    <div class="cadastrar-card">

        <h2 class="titulo text-center mb-4">Cadastro de Funcionário</h2>

        <form asp-action="CadastroFunc2" method="post" class="d-flex flex-column gap-3">

            <div class="form-group">
                <label for="Nome">Nome Completo</label>
                <input type="text" class="form-control" id="Nome" name="Nome" placeholder="Digite o nome completo" required />
            </div>

            <div class="form-group">
                <label for="Cpf">CPF</label>
                <input type="text" class="form-control" id="Cpf" name="Cpf" placeholder="Digite o CPF" required />
            </div>

            <div class="form-group">
                <label for="Rg">RG</label>
                <input type="text" class="form-control" id="Rg" name="Rg" placeholder="Digite o RG" required />
            </div>

            <button type="submit" class="btn btn-opcao">Confirmar Cadastro</button>

            <a class="btn btn-voltar" asp-controller="LoginFunc2" asp-action="LoginFunc2">Voltar</a>

        </form>

    </div>

</div>
