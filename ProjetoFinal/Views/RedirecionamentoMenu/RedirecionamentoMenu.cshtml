@{
    ViewData["Title"] = "Cadastro Concluído";
}

<!-- Link CSS individual -->
<link href="@Url.Content("~/css/redirecionamentoMenu.css")" rel="stylesheet" />

<video autoplay loop muted playsinline class="bg-video">
    <source src="@Url.Content("~/videos/wavesplayback.mp4")" type="video/mp4" />
</video>

<div class="container-aviso">

    <div class="card-aviso">

        <h3 class="aviso-title">Cadastro Realizado!</h3>

        <p class="aviso-text">
            O funcionário foi cadastrado com sucesso.
        </p>

        <p class="aviso-subtext">
            A senha inicial do funcionário será o próprio <strong>CPF cadastrado</strong>.<br />
            Mantenha essa informação em segurança.
        </p>

        <p class="aviso-subtext">
            Código do funcionário cadastrado:
        </p>

        <input type="text"
               class="input-codigo-funcionario"
               value="@ViewBag.CodigoFuncionario"
               readonly />

        <a class="btn-aviso mt-4"
           asp-controller="Menu"
           asp-action="Menu">
            Voltar para o menu
        </a>
    </div>

</div>
