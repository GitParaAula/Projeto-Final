@{
    ViewData["Title"] = "Menu do Funcionário";
}

<link href="~/css/menu.css" rel="stylesheet" />

<video autoplay loop muted playsinline class="bg-video">
    <source src="@Url.Content("~/videos/wavesplayback.mp4")" type="video/mp4" />
</video>

<link href="~/css/menu_popup.css" rel="stylesheet" />

<!-- POPUP -->
<div id="popup-overlay" class="popup-overlay">
    <div class="popup-card">
        <h2>Bem-vindo!</h2>
        <p>Olá, bem-vindo ao sistema de gerenciamento da VitaPet. Aqui você pode cadastrar, gerenciar e administrar toda a base de dados.</p>

        <label class="checkbox-hide">
            <input type="checkbox" id="hidePopupCheckbox">
            Não exibir novamente
        </label>

        <button class="btn-popup" id="closePopupBtn">Entendi</button>
    </div>
</div>

<script>
    window.onload = function () {
        const popup = document.getElementById("popup-overlay");
        const closeBtn = document.getElementById("closePopupBtn");
        const checkbox = document.getElementById("hidePopupCheckbox");

        // Se marcado anteriormente, não mostrar novamente
        if (localStorage.getItem("hidePopupMenu") === "true") {
            popup.style.display = "none";
            return;
        }

        // Exibir popup normalmente
        popup.style.display = "flex";

        // Botão "Entendi"
        closeBtn.addEventListener("click", () => {
            if (checkbox.checked) {
                localStorage.setItem("hidePopupMenu", "true");
            }

            popup.style.opacity = "0";

            setTimeout(() => {
                popup.style.display = "none";
            }, 300);
        });
    };
</script>


<nav class="custom-navbar">
    <div class="nav-container">

        <span class="nav-title">Sistema do Funcionário</span>

        <ul class="nav-links">

            <li><a asp-controller="Cadastrar" asp-action="Cadastrar">Cadastrar</a></li>
            <li><a asp-controller="Consultar" asp-action="Consultar">Consultar</a></li>
            <li><a asp-controller="Gerenciar" asp-action="Gerenciar">Gerenciar</a></li>
            <li><a asp-controller="Atualizar" asp-action="Atualizar">Atualizar</a></li>
            <li><a asp-controller="Excluir" asp-action="Excluir">Excluir</a></li>

        </ul>

        <a class="btn-exit"
           asp-controller="SairAviso"
           asp-action="SairAviso">
            Sair
        </a>

    </div>
</nav>

<div class="welcome-container">
    <div class="welcome-card">
        <h2>Bem-vindo ao Menu!</h2>
    </div>
</div>

<!-- LOGO CENTRAL -->
<div class="logo-container">
    <img src="~/images/logoc.png" alt="Logo do Sistema" class="logo" />
</div>

