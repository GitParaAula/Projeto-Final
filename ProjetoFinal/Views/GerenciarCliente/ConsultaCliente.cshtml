@model List<ProjetoFinal.Models.Usuario>

@{
    ViewData["Title"] = "Atualizar Clientes";
}

<link href="@Url.Content("~/css/atualizarcliente.css")" rel="stylesheet" />

<video autoplay loop muted playsinline class="bg-video">
    <source src="@Url.Content("~/videos/wavesplayback.mp4")" type="video/mp4" />
</video>

<div class="consulta-container">

    <!-- TÍTULO -->
    <h2 class="consulta-titulo">Atualizar Cliente</h2>

    <!-- CAMPO DE BUSCA -->
    <form method="get" asp-action="ConsultaCliente" class="consulta-form">
        <input type="text" name="nome" placeholder="Pesquisar por nome..." />
        <button type="submit">Buscar</button>
    </form>

    <!-- TABELA DE CLIENTES -->
    <div class="table-container">
        <table class="table-primary-custom">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Idade</th>
                    <th>Email</th>
                    <th>Endereço</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    <tr>
                        <td>@u.Nome</td>
                        <td>@u.Cpf</td>
                        <td>@u.Idade</td>
                        <td>@u.Email</td>
                        <td>
                            Rua: @u.Endereco?.Rua <br />
                            Nº: @u.Endereco?.Numero <br />
                            Comp: @u.Endereco?.Complemento
                        </td>
                        <td>
                            <a asp-controller="GerenciarCliente"
                               asp-action="Editar"
                               asp-route-id="@u.Codigo_Usuario"
                               class="btn-editar">
                                Editar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- BOTÃO VOLTAR -->
    <a asp-controller="Atualizar" asp-action="Atualizar" class="btn-voltar">Voltar</a>

</div>