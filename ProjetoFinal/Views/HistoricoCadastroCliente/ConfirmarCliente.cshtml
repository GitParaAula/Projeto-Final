@model ProjetoFinal.Models.HistoricoCadastro

@{
    ViewData["Title"] = "Confirmar Cliente";
}

<!-- Link do CSS individual da página -->
<link href="@Url.Content("~/css/HistoricoConfCliente.css")" rel="stylesheet" />

<video autoplay loop muted playsinline class="bg-video">
    <source src="@Url.Content("~/videos/wavesplayback.mp4")" type="video/mp4" />
</video>

<div class="container-confirm-cliente">

    <h2>Confirmar Funcionário Responsável pelo Cadastro</h2>

    @if (TempData["Erro"] != null)
    {
        <div class="alert-erro">
            @TempData["Erro"]
        </div>
    }

    <form asp-controller="HistoricoCadastroCliente" asp-action="Registrar" method="post">

        <div class="form-group">
            <label for="Codigo_Funcionario">Código do Funcionário:</label>
            <input type="number" id="Codigo_Funcionario" name="Codigo_Funcionario" class="form-control" required />
        </div>

        <button type="submit" class="btn-confirm-cliente">Confirmar</button>

    </form>

</div>
