@model List<ProjetoFinal.Models.Pet>

@{
    ViewData["Title"] = "Excluir Pet";
}

<link href="~/css/excluirpet.css" rel="stylesheet" />

<div class="cadastrar-container">

    <div class="cadastrar-card">

        <h2 class="titulo text-center mb-4">Excluir Pet</h2>

        <!-- CAMPO DE BUSCA -->
        <form method="get" asp-controller="ExcluirPet" asp-action="ExcluirPet" class="mb-4">
            <div class="input-group">
                <input type="text" name="nome" class="form-control" placeholder="Pesquisar por nome do pet..." />
                <button type="submit" class="btn btn-primary">Buscar</button>
            </div>
        </form>

        <!-- TABELA -->
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-danger text-center">
                    <tr>
                        <th>Nome</th>
                        <th>Raça</th>
                        <th>Tipo</th>
                        <th>Porte</th>
                        <th>Idade</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pet in Model)
                    {
                        <tr>
                            <td>@pet.Nome</td>
                            <td>@pet.Raca</td>
                            <td>@pet.Tipo</td>
                            <td>@pet.Porte</td>
                            <td>@pet.Idade</td>
                            <td class="text-center">
                                <form asp-controller="ExcluirPet" asp-action="ConfirmarExcluir" method="post"
                                      onsubmit="return confirmarExclusaoPet();">
                                    <input type="hidden" name="id" value="@pet.Codigo_Pet" />
                                    <button class="btn btn-danger btn-sm">Excluir</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <a class="btn btn-voltar w-100 mt-3" asp-controller="Excluir" asp-action="Excluir">
            Voltar
        </a>

    </div>

</div>

<script>
    function confirmarExclusaoPet() {
        return confirm("Tem certeza que deseja EXCLUIR este pet? Esta ação não poderá ser desfeita.");
    }
</script>
