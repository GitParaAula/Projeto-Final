@model List<ProjetoFinal.Models.Funcionario>

@{
    ViewData["Title"] = "Consulta de Funcionários";
}

<link href="~/css/consultafuncionario.css" rel="stylesheet" />

<div class="container-consulta">

    <h2>Funcionários Registrados</h2>

    <!-- CAMPO DE BUSCA -->
    <form method="get" asp-action="ConsultaFuncionario" class="search-box mb-4">
        <div class="input-group">
            <input type="text" name="nome" class="form-control" placeholder="Digite o nome para consultar" />
            <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
    </form>

    <!-- TABELA -->
    <div class="table-responsive">
        <table class="table table-bordered table-primary-custom">
            <thead class="table-primary-custom">
                <tr>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>RG</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var f in Model)
                {
                    <tr>
                        <td>@f.Nome</td>
                        <td>@f.Cpf</td>
                        <td>@f.Rg</td>
                        <td>
                            <a asp-controller="EditarFuncionario"
                               asp-action="Editar"
                               asp-route-id="@f.Codigo_funcionario"
                               class="btn btn-warning btn-sm">
                                Editar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <a class="btn btn-secondary w-100 mt-3 mb-5"
       asp-controller="Atualizar"
       asp-action="Atualizar">
        Voltar
    </a>
</div>
