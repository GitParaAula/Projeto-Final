@model List<ProjetoFinal.Models.Plano>

@{
    ViewData["Title"] = "Consulta de Planos";
}

<link href="~/css/ConsultaPlanos_Atualizar.css" rel="stylesheet" />

<div class="cadastrar-container">

    <div class="cadastrar-card">

        <h2 class="titulo text-center mb-4">Consulta de Planos</h2>

        <!-- Barra de pesquisa -->
        <form method="get" asp-controller="EditarPlano" asp-action="ConsultaPlano" class="search-box mb-4">
            <div class="input-group">
                <input type="text" name="nome" class="form-control" placeholder="Pesquisar por nome..." />
                <button class="btn btn-primary">Buscar</button>
            </div>
        </form>

        <!-- Tabela de resultados -->
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-primary-custom">
                    <tr>
                        <th>Nome</th>
                        <th>Valor (R$)</th>
                        <th>Duração</th>
                        <th>Requisitos</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td>@p.Nome</td>
                            <td>@p.Valor</td>
                            <td>@p.Duracao.ToString("dd/MM/yyyy")</td>
                            <td>@p.Requisitos</td>
                            <td>
                                <a class="btn btn-warning btn-sm"
                                   asp-controller="EditarPlano"
                                   asp-action="Editar"
                                   asp-route-id="@p.Codigo_Plano">
                                    Editar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Botão voltar -->
        <a class="btn btn-voltar mt-3"
           asp-controller="Atualizar"
           asp-action="Atualizar">
            Voltar
        </a>

    </div>

</div>
