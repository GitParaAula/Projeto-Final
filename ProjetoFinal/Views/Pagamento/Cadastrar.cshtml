@model ProjetoFinal.Models.Pagamento

@{
    ViewData["Title"] = "Cadastrar Pagamento";
}

<link href="~/css/cadastrarpagamento.css" rel="stylesheet" />

<div class="form-container">

    <h2 class="text-center mb-4">Realizar Pagamento</h2>

    @if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["Sucesso"]
        </div>
    }

    <form asp-action="Cadastrar" method="post">

        <label>Titular</label>
        <input type="text" class="form-control mb-3" asp-for="Titular" required />

        <label>Valor (R$)</label>
        <input type="number" step="0.01" class="form-control mb-3" asp-for="Valor" required />

        <label>Método de Pagamento</label>
        <input type="text" class="form-control mb-3" asp-for="MetodoPagamento" placeholder="Cartão, PIX, Boleto..." />

        <label>Código do Usuário</label>
        <input type="number" class="form-control mb-3" asp-for="Codigo_Usuario" required />

        <button type="submit" class="btn btn-primary w-100">Realizar Pagamento</button>

    </form>

    <a asp-controller="ComprarPlano"
       asp-action="Index"
       class="btn btn-secondary w-100 mt-3">
        Voltar
    </a>

</div>
