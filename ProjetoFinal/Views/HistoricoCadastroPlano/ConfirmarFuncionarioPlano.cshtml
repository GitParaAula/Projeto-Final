@model ProjetoFinal.Models.HistoricoCadastro

@{
    ViewData["Title"] = "Confirmar Funcionário para Cadastro de Plano";
}

<!-- Link do CSS individual da página -->
<link href="@Url.Content("~/css/HistoricoConfPlano.css")" rel="stylesheet" />

<div class="container-confirm-plano">

    <h2>Confirmar Funcionário do Cadastro de Plano</h2>

    <form asp-controller="HistoricoCadastroPlano" asp-action="RegistrarPlano" method="post">

        <div class="form-group">
            <label for="Codigo_Funcionario">Código do Funcionário:</label>
            <input type="number" id="Codigo_Funcionario" name="Codigo_Funcionario" class="form-control" required />
        </div>

        <button type="submit" class="btn-confirm-plano">Confirmar</button>

    </form>

</div>
